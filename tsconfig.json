{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src/main",
    "baseUrl": "src",
    "lib": ["es2019"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@test/*": ["test/*"],
      "@/*": ["main/*"]
    },
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/test"]
}
