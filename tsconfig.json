{
    "compilerOptions": {
      "outDir": "./dist",
      "baseUrl": "./",
      "lib": ["es2019"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "paths": {
        "@/test/*": ["src/test/*"],
        "@/*": ["src/main/*"]
      },
      "strict": true
    },
    "exclude": ["node_modules"]
  }