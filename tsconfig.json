{
    "compilerOptions": {
      "declaration": true,
      "outDir": "./dist",
      "baseUrl": "src",
      "lib": ["es2019"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "paths": {
        "@test/*": ["test/*"],
        "@/*": ["main/*"]
      },
      "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }